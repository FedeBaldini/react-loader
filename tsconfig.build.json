{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "example",
    "dist",
    "src/__mocks__",
    "src/__tests__",
    "src/stories"
  ]
}
