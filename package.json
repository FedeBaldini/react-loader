{
  "name": "react-loader-ts",
  "version": "2.0.2",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": "https://github.com/FedeBaldini/react-loader.git",
  "author": "Federico Baldini",
  "license": "MIT",
  "private": false,
  "files": [
    "dist",
    "dist",
    "dist/styles"
  ],
  "keywords": [
    "react",
    "nextjs",
    "typescript",
    "loader",
    "spinner",
    "context"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./components/Loader": {
      "import": "./dist/components/Loader/index.js",
      "types": "./dist/components/Loader/index.d.ts"
    },
    "./components/WithLoader": {
      "import": "./dist/components/WithLoader.js",
      "types": "./dist/components/WithLoader.d.ts"
    },
    "./styles/global.css": {
      "default": "./dist/styles/global.css"
    }
  },
  "scripts": {
    "format": "prettier --write .",
    "cleanup": "rimraf node_modules yarn.lock",
    "cleanup:build": "rimraf dist/ tsconfig.build.tsbuildinfo",
    "build:css": "postcss src/styles/global.css -o dist/styles/global.css",
    "build:ts": "tsc --build ./tsconfig.build.json",
    "build": "yarn cleanup:build && yarn build:ts && yarn build:css",
    "compile": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "pr": "yarn compile && yarn build && yarn test",
    "prepare": "husky install",
    "start:example": "cd ./example && yarn dev",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "publish:local": "npm pack"
  },
  "peerDependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "8.6.14",
    "@storybook/addon-interactions": "8.6.14",
    "@storybook/addon-onboarding": "8.6.14",
    "@storybook/blocks": "8.6.14",
    "@storybook/react": "8.6.14",
    "@storybook/react-vite": "8.6.14",
    "@storybook/test": "8.6.14",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "@types/jest": "29.5.14",
    "@types/node": "22.15.21",
    "@types/react": "19.1.5",
    "@types/react-dom": "19.1.5",
    "autoprefixer": "10.4.21",
    "cssnano": "7.0.7",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "jest-css-modules-transform": "4.4.2",
    "jest-environment-jsdom": "29.7.0",
    "lint-staged": "16.0.0",
    "postcss": "8.5.3",
    "postcss-cli": "11.0.1",
    "prettier": "3.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "rimraf": "6.0.1",
    "storybook": "8.6.14",
    "ts-jest": "29.3.4",
    "ts-node": "10.9.2",
    "typescript": "5.8.3",
    "vite": "6.3.5"
  },
  "resolutions": {
    "jackspeak": "4.1.1"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,css,md}": "prettier --write"
  }
}
