{
  "name": "react-loader-ts",
  "version": "0.3.2",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "repository": "https://github.com/FedeBaldini/react-loader.git",
  "author": "Federico Baldini",
  "license": "MIT",
  "private": false,
  "files": [
    "/lib"
  ],
  "keywords": [
    "react",
    "typescript",
    "loader",
    "spinner",
    "context"
  ],
  "scripts": {
    "clean": "rimraf lib/",
    "copy-files:esm": "copyfiles -u 1 src/**/*.html src/**/*.css lib/esm",
    "copy-files:cjs": "copyfiles -u 1 src/**/*.html src/**/*.css lib/cjs",
    "build": "yarn clean && yarn build:esm && yarn build:cjs",
    "build:esm": "tsc && yarn copy-files:esm",
    "build:cjs": "tsc --module commonjs --outDir lib/cjs && yarn copy-files:cjs",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "husky install",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@storybook/addon-actions": "^6.3.7",
    "@storybook/addon-essentials": "^6.3.7",
    "@storybook/addon-links": "^6.3.7",
    "@storybook/react": "^6.3.7",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "babel-loader": "^8.2.2",
    "copyfiles": "^2.4.1",
    "husky": ">=6",
    "jest": "^27.1.0",
    "jest-css-modules-transform": "^4.3.0",
    "lint-staged": ">=10",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  },
  "dependencies": {}
}
