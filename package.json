{
  "name": "react-loader-ts",
  "version": "0.4.0",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "repository": "https://github.com/FedeBaldini/react-loader.git",
  "author": "Federico Baldini",
  "license": "MIT",
  "private": false,
  "files": [
    "/lib",
    "!/lib/**/__tests__",
    "!/lib/**/__mocks__",
    "!/lib/**/stories"
  ],
  "keywords": [
    "react",
    "typescript",
    "loader",
    "spinner",
    "context"
  ],
  "scripts": {
    "clean": "rimraf lib/",
    "copy-files:esm": "copyfiles -u 1 src/**/*.html src/**/*.css lib/esm",
    "copy-files:cjs": "copyfiles -u 1 src/**/*.html src/**/*.css lib/cjs",
    "build": "yarn clean && yarn build:esm && yarn build:cjs",
    "build:esm": "tsc && yarn copy-files:esm",
    "build:cjs": "tsc --module commonjs --outDir lib/cjs && yarn copy-files:cjs",
    "compile": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "husky install",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@storybook/addon-actions": "^7.6.4",
    "@storybook/addon-essentials": "^7.6.4",
    "@storybook/addon-links": "^7.6.4",
    "@storybook/react": "^7.6.4",
    "@storybook/react-webpack5": "^7.6.4",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/jest": "^29.5.11",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.17",
    "babel-loader": "^9.1.3",
    "copyfiles": "^2.4.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-css-modules-transform": "^4.4.2",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "storybook": "^7.6.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  },
  "resolutions": {
    "jackspeak": "2.1.1"
  }
}
